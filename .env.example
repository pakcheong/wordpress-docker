# WordPress container name and port
WORDPRESS_CONTAINER_NAME=wordpress-site
WORDPRESS_PORT=8250

# Data volumes (default values, can be overridden)
WORDPRESS_DATA_PATH=./volumes/wordpress
DB_DATA_PATH=./volumes/database

# Database configuration (must match db service)
WORDPRESS_DB_HOST=db:3306
WORDPRESS_DB_USER=wp_user
WORDPRESS_DB_PASSWORD=wp_pass
WORDPRESS_DB_NAME=wordpress

# MySQL
DB_CONTAINER_NAME=wordpress-database
MYSQL_ROOT_PASSWORD=rootpass

# Site information (for auto installation)
SITE_URL=http://direct.pakcheong.com:8250
SITE_TITLE=My Awesome Site
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=password
WP_ADMIN_EMAIL=me@example.com

# Auto install and activate plugins (comma-separated slugs)
# Example: classic-editor,wordpress-seo,akismet
WP_PLUGINS=classic-editor

# Other preferences
WP_LOCALE=en_US
WP_PERMALINK=/%postname%/
WP_TIMEZONE=Asia/Shanghai
